<%= render "layouts/header" %>
<%= render "layouts/error", book_new: @book_new %>
<%= render "layouts/side", book_new: @book_new, user: @user %>
<!--ユーザ-ー-一覧  -->
	<h2>Users</h2>
	<table>
		<thead>
           <tr>
           	 	<th>image</th>
           	 	<th>name</th>
           </tr>
		</thead>
		<tbody><!--全ユーザー一覧-->
			<% @users.each do |user|%><!--ユーザーのイメージ, その人の投稿一覧-->
			<tr>
				<td><%= attachment_image_tag user, :profile_image, :fill, 40, 40, format: 'jpeg', fallback: "sample.jpg" %></td>
				<td><%= user.name %></td><!--name -->
				<td><%= link_to "Show", user_path(user.id) %></td><!--showボタンで(そのidの投稿一覧 -->
			</tr>
			<% end %>
		</tbody>
	</table>
<%= render "layouts/footer" %>