
  <h2>User info</h2>
 <!--画像表示するようにする-->

  <div>
    <%= attachment_image_tag user, :profile_image, size: "100x100", format: 'jpeg', fallback: "sample.jpg" %>
     <table class="table">
   	   <tbody>
   	    <tr><th>name</th><th><%= user.name %></th></tr><!--railsなので％-->
   	    <tr><th>introduction</th><th><%= user.introduction %></th></tr>
       </tbody>
     </table>
  </div>
  <div>
  <% if user.id == current_user.id %>
    <div>
    <%= link_to edit_user_path(user), class:"col-xs-12 btn btn-default " do %>
    <span class="glyphicon glyphicon-wrench" aria-hidden="true"></span>
    <% end %>
    </div>
    <% end %>
  </div>
<!--ユーザー編集-->

<!--フォーム-->
  <div>
   <h2>New book</h2>
    <%= form_for(book_new) do |f| %>
     <div class="form-group row">
  	   <label>Title</label>
  	   <%= f.text_field :title, class:"col-xs-12" %>
     </div>
     <div class="form-group row">
  	   <label>Opinion</label>
  	   <%= f.text_area :body, class:"col-xs-12" %>
     </div>
     <div class="form-group actions row">
  	   <%= f.submit "Create Book",class: "btn btn-info"%>
     </div>
    <% end %>
  </div>